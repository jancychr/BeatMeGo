<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.beatme.go.MapSearchFragment"
    android:id="@+id/map_search_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="380dp"
    android:orientation="vertical"
    android:background="@drawable/dialogbg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Map Search"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:typeface="sans"
            />
        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/clgbtn"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:cropToPadding="false"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp"
        android:background="@drawable/dialoginnerbg"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        >
        <ProgressBar
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminate="true"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_code"
            android:text="Creating Session..."
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>