<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <!--  OWN STYLES START FROM HERE -->
    <style name="textViewFonts" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>
    <style name="buttonFonts" parent="android:Widget.Button">
        <item name="android:typeface">sans</item>
    </style>

    <!-- loading page progress bar -->
    <style name="Pb_f" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/pb_f</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <!-- Button slides -->
    <style name="btnstyle" parent="@style/buttonFonts">
        <item name="android:background">@drawable/btnstyle</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- Username text view style -->
    <style name="bguser" parent="@style/textViewFonts">
        <item name="android:background">@drawable/bguser</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- User trophy style -->
    <style name="utrphy" parent="@style/textViewFonts">
        <item name="android:background">@drawable/tvtrphy</item>
        <item name="android:gravity">right</item>
    </style>
    <!-- username style -->
    <style name="usrnmstl" parent="@style/textViewFonts">
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textSize">25dp</item>
    </style>
    <!-- player stats label -->
    <style name="plysttslbl" parent="@style/textViewFonts">
        <item name="android:textColor">#2e5cb8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!-- player stats boxes -->
    <style name="plysttsbx" parent="@style/textViewFonts">
        <item name="android:background">@drawable/plystsbx</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!-- style of buttons in settings -->
    <style name="btnstngn" parent="android:Widget.Button">
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/btnstng</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <!-- style of copy -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#034F70</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyButtonMed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="LabelText"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="MyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
