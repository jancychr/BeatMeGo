<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appsettings_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="350dp"
    android:background="@drawable/dialogbg"
    android:orientation="vertical"
    tools:context="com.beatme.go.AppSettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/clgbtn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dialoginnerbg"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                >
                <TextView
                    style="@style/plysttslbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Play Sing-in"
                    android:textSize="12dp"
                    />
                <Button
                    android:id="@+id/googlesigninbtn"
                    android:background="@drawable/btnstngc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:minHeight="0dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                >
                <TextView
                    style="@style/plysttslbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SFx"
                    android:textSize="12dp"
                    />
                <Button
                    android:id="@+id/sfxbutton"
                    android:background="@drawable/btnstngc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:minHeight="0dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/games_controller_grey"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textColor="#000"
                    android:typeface="sans"
                    android:textSize="12dp"
                    android:text="Use Google Play Sing-in to safeguard your progress and to play on multiple Android devices."
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/creditbutton"
                    style="@style/btnstngn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Credits"
                    android:layout_margin="5dp"
                    />
                <Button
                    android:id="@+id/helpbutton"
                    style="@style/btnstngn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Help and Support"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>